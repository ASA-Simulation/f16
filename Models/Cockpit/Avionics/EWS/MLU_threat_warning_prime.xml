<?xml version="1.0"?>

<PropertyList>

 <path>MLU_threat_warning_prime.ac</path>

 <animation>
  <object-name>rect</object-name>
  <object-name>brt-knob</object-name>
  <type>material</type>
  <emission>
   <factor-prop>controls/lighting/lighting-panel/flood-inst-pnl</factor-prop>
   <red>0.45</red>
   <green>0.34</green>
   <blue>0.18</blue>
  </emission>
 </animation>

  <animation>
  <object-name>launch</object-name>
  <type>material</type>
  <condition>
    <or>
      <property>controls/test/test-panel/mal-ind-lts</property>
      	<and>
      		<property>f16/avionics/cockpit_blinker/state</property>
    	    <not>
    	      <equals>
    	          <property>sound/rwr-launch</property>
    	          <value type="string"></value>
    	      </equals>
    	    </not>
          <greater-than-equals>
                    <property>f16/avionics/power-ufc-warm</property>
                    <value>0.90</value>
                </greater-than-equals>
    	</and>
    </or>
  </condition>

  <emission>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </emission>
 </animation>

 <animation>
  <object-name>pri</object-name>
  <type>material</type>
  <condition>
    <or>
      <property>controls/test/test-panel/mal-ind-lts</property>
      <and>
	      <equals>
	          <property>sound/rwr-pri</property>
	          <value>1</value>
	      </equals>
        <greater-than-equals>
            <property>f16/avionics/power-ufc-warm</property>
            <value>0.90</value>
        </greater-than-equals>
      </and>
    </or>
	</condition>
  <emission>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </emission>
 </animation>

 <animation>
  <object-name>unk</object-name>
  <type>material</type>
  <condition>
    <or>
      <property>controls/test/test-panel/mal-ind-lts</property>
      <and>
	      <equals>
	          <property>sound/rwr-unk</property>
	          <value>1</value>
	      </equals>
        <greater-than-equals>
                <property>f16/avionics/power-ufc-warm</property>
                <value>0.90</value>
            </greater-than-equals>
          </and>
        </or>
	</condition>
  <emission>
   <red>1</red>
   <green>1</green>
   <blue>1</blue>
  </emission>
 </animation>
 
 <animation>
        <type>pick</type>
        <object-name>button_sep</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>f16/avionics/rwr-seperate</property>
                <value>1</value>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>f16/avionics/rwr-seperate</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>button-sep</tooltip-id>
                <label>Seperate RWR contacts</label>
            </binding>
        </hovered>
    </animation>

</PropertyList>
